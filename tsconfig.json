{
  "compilerOptions": {
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "React",
    "module": "commonjs",
    "noImplicitAny": false,
    "baseUrl": "./",
    "importHelpers": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["dom", "es5", "ES2015", "es2016", "es2017"],
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "plugins",
    "less",
    "images",
    "dev",
    "certs",
    "app",
    "jspm_packages",
    "lib",
    "vt",
    "tools",
    "dist",
    "dll",
    "env",
    "error",
    "sounds",
    "src/**/flycheck_*"
  ]
}
